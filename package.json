{
  "name": "root",
  "description": "FHEVM Rock Paper Scissors",
  "version": "0.1.0",
  "private": true,
  "author": "GermÃ¡n MartÃ­nez",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "keywords": [
    "fhevm",
    "zama",
    "ethereum",
    "web3",
    "hardhat",
    "typescript",
    "sdk"
  ],
  "homepage": "https://github.com/germartinez/fhevm-rock-paper-scissors/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/germartinez/fhevm-rock-paper-scissors.git"
  },
  "scripts": {
    "format": "pnpm sdk:format && pnpm hardhat:format",
    "clean": "pnpm sdk:clean && pnpm hardhat:clean",
    "lint": "pnpm sdk:lint && pnpm hardhat:lint",
    "precommit": "lint-staged",
    "sdk:clean": "pnpm --filter ./packages/sdk clean",
    "sdk:build": "pnpm --filter ./packages/sdk build",
    "sdk:format": "pnpm --filter ./packages/sdk prettier:write",
    "sdk:lint": "pnpm --filter ./packages/sdk lint",
    "hardhat:chain": "pnpm --filter ./packages/hardhat chain",
    "hardhat:clean": "pnpm --filter ./packages/hardhat clean",
    "hardhat:compile": "pnpm --filter ./packages/hardhat compile",
    "hardhat:deploy": "pnpm --filter ./packages/hardhat deploy:localhost && pnpm hardhat:generate",
    "hardhat:deploy:sepolia": "pnpm --filter ./packages/hardhat deploy:sepolia && pnpm hardhat:generate",
    "hardhat:format": "pnpm --filter ./packages/hardhat prettier:write",
    "hardhat:generate": "pnpm --filter ./packages/hardhat typechain",
    "hardhat:hardhat-verify": "pnpm --filter ./packages/hardhat verify",
    "hardhat:lint": "pnpm --filter ./packages/hardhat lint",
    "hardhat:lint-staged": "pnpm --filter ./packages/hardhat lint",
    "hardhat:verify": "pnpm --filter ./packages/hardhat verify:localhost",
    "hardhat:verify:sepolia": "pnpm --filter ./packages/hardhat verify:sepolia"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.19.8",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@zama-fhe/relayer-sdk": "^0.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^2.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "rimraf": "^6.0.1",
    "solhint": "^6.0.0",
    "solidity-coverage": "^0.8.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.20.0"
}
